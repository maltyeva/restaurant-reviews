<p id="notice"><%= notice %></p>
<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>
<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>
<p>
  <strong>Stars:</strong>
  <%= @restaurant.stars %>
</p>
<p>
  <h4>All of the reviews</h4>
  <ul>
    <% @restaurant.reviews.each do |review| %>
      <li>
        <%= review.content %> - <%= link_to "Delete", review_path(review), method: "delete", data: {confirm: "Are you sure?"} %>
      </li>
    <% end %>
  </ul>
</p>
<%= link_to "Add New Review", new_restaurant_review_path(@restaurant), class: "btn btn-success" %>
<%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
<%= link_to 'Back', restaurants_path %> | 
<%= link_to "Learn more about the chef", chef_restaurant_path(@restaurant) %>